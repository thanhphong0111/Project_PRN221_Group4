@page "{id:int?}"
@model WebRazor.Pages.Cart.IndexModel
@{
    if (Model.Cart == null || Model.Cart.Count == 0)
    {
        ViewData["cartSize"] = 0;
    }
    else
    {
        ViewData["cartSize"] = Model.Cart.Count;
    }
}

<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @if (Model.Cart == null || Model.Cart.Count == 0)
                {
                    <div style="padding: 1%; color:red; font-size:28px" class="cart-item msg-error">No product in your cart!</div>
                }
                else
                {

                    <div class="cart-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th class="p-name">Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th><i class="ti-close"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Cart)
                                {
                                    <tr>
                                        <td class="cart-pic first-row"><img src="~/img/cart-page/product-1.jpg" alt=""></td>
                                        <td class="cart-title first-row">
                                            <h5><a href="~/Product/Detail/@item.Key.ProductId">@item.Key.ProductName</a></h5>
                                        </td>
                                        <td class="p-price first-row">$@item.Key.UnitPrice</td>
                                        <td class="cart-title first-row" style="text-align:center">
                                            <div>
                                                @if (item.Value > 1)
                                                {
                                                    <a href="~/Cart/Down/@item.Key.ProductId" style="font-size:24px">-</a>
                                                }
                                                <input type="text" value="@item.Value" disabled style="text-align:center; width:48px" />
                                                <a href="~/Cart/Up/@item.Key.ProductId" style="font-size:24px">+</a>
                                            </div>
                                        </td>
                                        <td class="p-price first-row">$@((float)item.Key.UnitPrice * (float)item.Value)</td>
                                        <td class="close-td first-row"><a href="~/Cart/Remove/@item.Key.ProductId"><i class="ti-close"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                }
                <form method="post">
                    <div class="row">
                        <div id="customer-info" class="col-md-6">
                            <div id="customer-info-content">
                                <h3>CUSTOMER INFORMATION:</h3>
                                <div id="customer-info-detail">
                                    <div id="customer-info-left">
                                        <input asp-for="Customer.CompanyName" type="text" placeholder="Company name *" /><br />
                                        <input asp-for="ContactName" type="text" placeholder="Contact name *" /><br />
                                    </div>
                                    <div id="customer-info-right">
                                        <input asp-for="Customer.ContactTitle" type="text" placeholder="Contact title *" /><br />
                                        <input asp-for="Customer.Address" type="text" placeholder="Address *" /><br />
                                    </div>
                                    <div id="customer-info-left">
                                        <input asp-for="RequireDate" type="date" value="@DateTime.UtcNow" required placeholder="Require Date" /><br />
                                    </div>
                                    <div class="msg-error">@ViewData["msg"]</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-lg-6 offset-lg-4">
                                <div class="proceed-checkout">
                                    <ul>
                                        <li class="cart-total">Total <span>$@Model.Sum.ToString(".00")</span></li>
                                    </ul>

                                </div>
                                <div class=" proceed-checkout">
                                    <input type="submit" class="proceed-btn" value="PROCEED TO CHECK OUT" />
                                </div>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->
