@model WebRazor.Pages.RegisterModel

@{
    Layout = "_Layout3";
    ViewData["Title"] = "Register";
}

<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<!-- Header Section Begin -->
<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-lg-2">
                <div class="header__logo">
                    <a href="/Index">
                        <img src="img1/logo.png" alt="">
                    </a>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="header__nav">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li><a href="/Index">Homepage</a></li>
                            <li><a href="/Login">Login</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="header__right">
                    <a href="#" class="search-switch"><span class="icon_search"></span></a>
                    <a href="/Login">Login Now</a>
                </div>
            </div>
        </div>
        <div id="mobile-menu-wrap"></div>
    </div>
</header>
<!-- Header End -->

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="img1/c.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Login</h2>
                    <p>Welcome to Cóp Phê Store.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->

<!-- Login Section Begin -->
<section class="login spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Register</h3>
                    <form method="post" onsubmit="return validateForm()">
                        @*<div style="margin-bottom:50px;" class="form-group">*@
                            <span style="color:red;" asp-validation-for="Error" ></span>
                            @*<h4 style="font-weight:bold;">select account type</h4>
                            <select name="role" >
                                <option value="2">Employee</option>
                                <option value="3">Customer</option>
                            </select>
                            
                        </div>*@
                        <div class="input__item">
                            <input type="text" name="email" placeholder="Email" required>
                            <span class="icon_mail"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" id="pass" name="password" placeholder="Password" required>
                            <span class="icon_lock"></span>
                        </div>
                        <div class="input__item company">
                            <input type="text" id="company" name="company" placeholder="Company" required>
                            <span class="icon_desktop"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" name="title" placeholder="Contact Title" required>
                            <span class="icon_contacts"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" name="contactName" placeholder="Contact Name" required>
                            <span class="icon_contacts_alt"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" name="address" placeholder="Address" required>
                            <span class="icon_house"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" id="repass" name="repass" placeholder="Confirm password" required>
                            <span class="icon_lock"></span>
                        </div>
                        <input type="submit" class="site-btn" value="Register Now"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Login Section End -->

